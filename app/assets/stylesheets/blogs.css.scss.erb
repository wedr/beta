.blog-left{
    width: 75%;
    float:left;
    marin: 0 5% 0 0;
}
.blog-right{
    width: 20%;
    float:right;
}
 /* ------ */

 .blog-content img{
    width: 180px;
    height: 160px;
    margin: 0 10px 0 0;
    float:left;
 }
 .blog-content{
    width:100%;
    float:right;
    padding: 5px;
    margin: 0 0 20px 0;

 }
 .blog-content h2 a, .blog-content-show h2 {
    color:white;
    text-decoration:none;
    font-size: 24px;
 }
 .blog-content h2 a:hover {
    background:none;
    color:#7086bf;
 }
 .blog-content h2 {
    margin: 0 0 2px 0;
 }
 .blog-content p, .blog-content-show p{
    color:#ccc;
    font-size: 12px;

 }
 .date {
     text-transform: uppercase;
     color:#7086bf !important;
     margin:5px 0 -5px 0;
     font-size: 11px !important;
 }


 /* BLOG ---- SHOW */

 .blog-content-show{
    width:100%;
 }
